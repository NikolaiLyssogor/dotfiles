theme = dark:jellybeans,light:jellybeans-light
font-family = "JetBrainsMono Nerd Font Mono"
font-size = 13

# Make ghostty fit in macos window size
adjust-cell-height = 13%
fullscreen = true
maximize = true
window-padding-balance = true
window-padding-y = 0
window-padding-x = 0

font-thicken
scrollback-limit = 40000000

window-save-state = always

# adjust split sizes
keybind = cmd+l=resize_split:right,10
keybind = cmd+h=resize_split:left,10
keybind = cmd+L=resize_split:up,10
keybind = cmd+H=resize_split:down,10

mouse-hide-while-typing = true

# quick terminal
keybind = cmd+j=toggle_quick_terminal
quick-terminal-position = center
quick-terminal-animation-duration = 0
quick-terminal-space-behavior = remain
